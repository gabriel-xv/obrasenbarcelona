<div class="container">

  <h3 class="mt-4">Crea una nueva publicaci√≥n</h3>
  <div class="article-complete-form mt-1">
    <%= simple_form_for(@article) do |f| %>
      <br>
      <br>
      <div>
        <div class="article-main-form">

          <div class="form-article mb-5">
            <%= f.input :title %>
          </div>

          <div class="form-article mb-5 rich_desc">
            <%= f.rich_text_area :rich_description %>
          </div>

          <div class="form-article">
            <%= f.input :category, collection: Article::CATEGORIES %>
          </div>

          <div class="form-article">
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          </div>

        </div>


        <div class="form-article">
          <%= f.simple_fields_for :items do |t| %>
            <%= render "item_fields", :f => t %>
          <% end %>
          <div class="btn-circle">
            <%= link_to_add_association "+", f, :items %>
          </div>

        </div>

        <div class="form-article-btn">
          <br>
          <%= f.button :submit, 'Publicar' %>
        </div>
      </div>
    <% end %>

  </div>


</div>

