<div class="container">
  <h2>Crea una nueva publicaci√≥n</h2>


  <%= simple_form_for(@article) do |f| %>

    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-inputs">
      <%= f.rich_text_area :rich_description %>
    </div>

    <div class="form-inputs">
      <%= f.input :category, collection: Article::CATEGORIES %>
    </div>

    <div class="form-inputs">
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    </div>

    <%= f.simple_fields_for :items do |i| %>

      <div class="form-inputs">
        <%= i.input :title %>
      </div>

      <div class="form-inputs">
        <%= i.input :comment %>
      </div>

      <div class="form-inputs">
        <%= i.input :photo, as: :file %>
      </div>

    <% end %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

</div>

