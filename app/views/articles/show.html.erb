<div class="container">

<h1><%= @article.title %></h1>
<div class="article-image">
  <%= cl_image_tag @article.photos.first.key %>
</div>
<%= @article.description %>

<h3>Proyecto de reforma</h3>

<h5>Photos</h5>
<ul>
  <% @article.pictures.each do |picture| %>
    <li><%= cl_image_tag(picture.photo, width: 400, height: 300, crop: :fill) %></li>
  <% end %>
</ul>


</div>

