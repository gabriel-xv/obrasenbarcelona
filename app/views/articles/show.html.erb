<% content_for :meta_title, "#{@article.title}" %>
<% content_for :meta_description, @article.description %>
<% content_for :meta_image, cl_image_path(@article.photos.first) %>

<div class="container">

  <div class="main-info-card mb-5 mt-4">
    <h1 class="mb-3"><%= @article.title %></h1>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @article.photos.each_with_index do |photo, i| %>
          <div class="carousel-item <%= "active" if i==0 %>">
            <div class="d-block">
              <%= cl_image_tag photo.key %>
            </div>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="article-description-box">
    <%= @article.rich_description %>
  </div>

  <div class="item-card">
    <% @article.items.each do |item| %>
      <h3><%= item.title %></h3>
      <div class="img-desc-card">
        <% if item.photo.present? %>
          <%= cl_image_tag item.photo.key %>
        <% end %>
        <div class="ml-3">
          <%= item.comment %>
        </div>
      </div>
    <% end %>
  </div>

</div>

