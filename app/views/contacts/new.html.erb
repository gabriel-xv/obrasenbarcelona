    <%= form_for @contact do |f| %>
      <div class="col-md-6">
        <%= f.text_field  :name, required: true, class: "contact-form-text-small",
              placeholder: "Su nombre" %></br>

        <%= f.text_field :email, required: true, class: "contact-form-text-small",
              placeholder: "Su correo" %></br>

        <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text",
              placeholder: "Escriba su mensaje"%></br>

        <div class= "d-none">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
        </div>

        <%= f.submit 'Send Message', class: 'contact-btn' %>
      </div>
    <% end %>
  </div>

